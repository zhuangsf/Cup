        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="时时"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

